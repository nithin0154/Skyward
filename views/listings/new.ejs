<% layout('/layouts/boilerplate.ejs') -%>
    <div class="row">
        <div class="col-8 offset-2">
            <br>
            <h3>Create a New Listing</h3>
            <br>
            <form method="POST" action="/listings" class="needs-validation" novalidate enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="listing[title]" class="form-label">Title</label>
                    <input name="listing[title]" placeholder="Add a catchy title" type="text" class="form-control"
                        required />
                    <div class="valid-feedback">Title looks good !</div>
                    <div class="invalid-feedback">Please enter title</div>
                </div>
                <div class="mb-3">
                    <label for="listing[description]" class="form-label">Description</label>
                    <textarea name="listing[description]" class="form-control" required></textarea>
                    <div class="invalid-feedback">Enter a short description</div>
                </div>
                <!-- <div class="mb-3">
                    <label for="listing[image]" class="form-label">Image-URL</label>
                    <input name="listing[image]" placeholder="Paste Image URL here" class="form-control" type="text" />
                </div> -->
                <div class="mb-3">
                    <label for="listing[image]" class="form-label">Upload a image</label>
                    <input name="listing[image]" class="form-control" type="file" required />
                    <div class="invalid-feedback">Value is required</div>
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="listing[price]" class="form-label">Price</label>
                        <input name="listing[price]" placeholder="Per Night" class="form-control" type="number"
                            required />
                        <div class="valid-feedback">Price entered</div>
                        <div class="invalid-feedback">Please enter a valid price</div>
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="listing[country]" class="form-label">Country</label>
                        <input name="listing[country]" placeholder="India" class="form-control" type="text" required />
                        <div class="invalid-feedback">Please enter valid country name</div>
                    </div>
                </div>


                <div class="row">
                    <div class="mb-3  col-md-4">
                        <label for="listing[location]" class="form-label">Location</label>
                        <input name="listing[location]" placeholder="Hyderbad,Telangana" class="form-control"
                            type="text" required />
                        <div class="invalid-feedback">Invalid Location</div>
                    </div>
                    <div class="mb-3  col-md-8">
                        <label for= "listing[category]" class="form-label">Category</label>
                        <select class="form-control" id="category" name="listing[category]" required>
                            <option value="">-- Select a Category --</option>
                            <option value="Trending">Trending</option>
                            <option value="Cities">Cities</option>
                            <option value="Rooms">Rooms</option>
                            <option value="Mountains">Mountains</option>
                            <option value="Pools">Pools</option>
                            <option value="Arctic">Arctic</option>
                            <option value="Farms">Farms</option>
                            <option value="Camping">Camping</option>
                            <option value="Hotels">Hotels</option>
                            <option value="Boats">Boats</option>
                        </select>
                    </div>
                </div>

                <br /><br />
                <button class="btn btn-dark add-btn">Add</button>
            </form>
        </div>
    </div>