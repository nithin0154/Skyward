<% layout('/layouts/boilerplate.ejs') -%>
    <script>
        let mapToken = "<%= process.env.MAP_TOKEN %>";
        console.log(mapToken);
        let coordinates = <%- JSON.stringify(listing.geometry.coordinates) %>;
        console.log(coordinates)
    </script>
    <div class="row show-row">
        <div class=" col-6 offset-3">
            <h3>&nbsp;&nbsp;&nbsp;<b>
                    <%= listing.title %>
                </b></h3>
            <div class="card listing-card">
                <img src="<%=listing.image.url%>" class="card-img-top show-img" alt="Listing-image">
                <div class="card-body">
                    <p class="crad-text"><i>
                            <%= listing.owner.username %>
                        </i></p>
                    <p class="card-text">&#8377; <%= listing.price.toLocaleString("en-IN") %>/night<br></p>
                    <p class="card-text">
                        <%= listing.description %>
                    </p>
                    <p class="card-text"></p>
                    <p class="card-text">
                        <%= listing.location %><br>
                    </p>
                    <p class="card-text">
                        <%= listing.country %>
                    </p>
                    <% if(currUser && currUser._id.equals(listing.owner._id)){ %>
                        <div class="show-btns row ">
                            <div class="col-3"><a href="/listings/<%= listing._id %>/edit" class="btn btn-primary">Edit
                                    Listing</a></div>
                            <div class="col-4">
                                <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
                                    <button class="btn btn-danger">Delete listing</button>
                                </form>

                            </div>

                        </div>
                        <% } %>
                            <br>
                            <div class=" col-12  ">
                                <hr>
                                <% if(currUser) {%>
                                    <h4>Leave a review</h4>

                                    <form method="POST" action="/listings/<%=listing._id%>/reviews"
                                        class="needs-validation" novalidate>
                                        <div class="mt-3 ">
                                            <label for="rating" class="form-label">Rating</label>
                                            <fieldset class="starability-checkmark custom-stars ">
                                                <input type="radio" id="no-rate" class="input-no-rate"
                                                    name="review[rating]" value="1" checked aria-label="No rating." />
                                                <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                                                <label for="first-rate1" title="Terrible">1 star</label>
                                                <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                                                <label for="first-rate2" title="Not good">2 stars</label>
                                                <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                                                <label for="first-rate3" title="Average">3 stars</label>
                                                <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                                                <label for="first-rate4" title="Very good">4 stars</label>
                                                <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                                                <label for="first-rate5" title="Amazing">5 stars</label>
                                            </fieldset>
                                        </div>
                                        <div class="mb-3">
                                            <label for="comment" class="form-label">Comments</label>
                                            <textarea class="form-control" name="review[comment]" rows="3" cols="15"
                                                id="comment" required></textarea>
                                            <div class="invalid-feedback">Please add few comments </div>
                                        </div>
                                        <br>
                                        <button class="btn btn-outline-dark" type="submit" class="mt-2">Submit</button>
                                    </form>
                                    <hr>
                                    <% } %>
                            </div>
                </div>
            </div>
            <div>

                <br>
                <% if(listing.reviews.length>0){ %>
                    <div class="row ">
                        <h4>All Reviews</h4>
                        <h3>
                            <%= process.env.MAP_TOKEN %>
                        </h3>

                        <% for(review of listing.reviews){ %>

                            <div class="card col-5 mt-3 ms-4 review-card ">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        @<%=review.author.username%>
                                    </h5>
                                    <% if(currUser && currUser._id.equals(review.author._id)){ %>
                                        <form
                                            action="/listings/<%=listing._id%>/reviews/<%=review._id %>?_method=DELETE"
                                            method="post">
                                            <button><i class="fa-solid fa-trash delete"></i></button>
                                        </form>
                                        <% } %>
                                            <p class="starability-result card-text custom-stars "
                                                data-rating="<%= review.rating %>">
                                            </p>

                                            <p class="card-text">

                                                <%= review.comment%>
                                            </p>

                                </div>


                            </div>
                            <% } %>

                    </div>
                    <% } %>
            </div>
        </div>

        <div class="location">
            <div class="col-6 offset-3">
                <h3>You'll be Here.</h3>
                <div id="map"></div>
            </div>
        </div>
    </div>

    <script src="/JS/mapscript.js"></script>