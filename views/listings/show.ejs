<br>
<% layout('/layouts/boilerplate.ejs') -%>
    <div class="row show-row">
        <div class=" col-6 offset-3">
            <h3>&nbsp;&nbsp;&nbsp;<b>
                    <%= listing.title %>
                </b></h3>
            <div class="card listing-card">
                <img src="<%=listing.image%>" class="card-img-top show-img" alt="Listing-image">
                <div class="card-body">
                    <h5 class="card-title">

                    </h5>
                    <p class="card-text">
                        <%= listing.description %> <br>
                            &#8377; <%= listing.price.toLocaleString("en-IN") %>/night<br>
                                <%= listing.location %><br>
                                    <%= listing.country %>

                    </p>
                    <div class="show-btns row ">
                        <div class="col-3"><a href="/listings/<%= listing._id %>/edit" class="btn btn-primary">Edit
                                Listing</a></div>
                        <div class="col-4">
                            <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
                                <button class="btn btn-danger">Delete listing</button>
                            </form>

                        </div>

                    </div>
                    <div class=" col-12  ">
                        <hr>
                        <h4>Leave a review</h4>

                        <form method="POST" action="/listings/<%=listing._id%>/reviews" class="needs-validation"
                            novalidate>
                            <div class="mt-3 mb-3">
                                <label for="rating" class="form-label">Rating</label>
                                <input class="form-range" class="-control" type="range" name="review[rating]"
                                    id="rating" min="1" , max="5">
                            </div>
                            <div class="mt-3 mb-3">
                                <label for="comment" class="form-label">Comments</label>
                                <textarea class="form-control" name="review[comment]" rows="3" cols="15" id="comment"
                                    required></textarea>
                                <div class="invalid-feedback">Please add few comments </div>
                            </div>
                            <br>
                            <button class="btn btn-outline-dark" type="submit" class="mt-2">Submit</button>
                        </form>
                    </div>
                </div>
            </div>
            <div>
                <hr>
                <br>
                <h4>All Reviews</h4>
                <div class="row ">

                    <% for(review of listing.reviews){ %>

                        <div class="card col-5 mt-3 ms-4 review-card ">
                            <div class="card-body">
                                <h5 class="card-title">John Doe</h5>
                                <form action="/listings/<%=listing._id%>/reviews/<%=review._id %>?_method=DELETE"
                                    method="post">
                                    <button><i class="fa-solid fa-trash delete"></i></button>
                                </form>

                                <p class="card-text">

                                    <%= review.comment%>
                                </p>
                                <p class="card-text">
                                    <%= review.rating %><i class="fa-solid fa-star star"></i>
                                </p>
                            </div>


                        </div>
                        <% } %>

                </div>

            </div>
        </div>
    </div>